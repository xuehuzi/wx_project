.self_header {
  background: url(https://s3plus.meituan.net/v1/mss_e2821d7f0cfe4ac1bf9202ecf9590e67/cdn-prod/file:9096d347/78890a8f1859bc10152151fc64aff5cc.png);
  background-size: 100% 100%;
  padding: 10% 0 5%;
  width: 100vw;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.self_header_iconbg {
  width: 80px;
  height: 80px;
  background: red;
  border-radius: 50%;
  margin-bottom: 5px;
}

.self_header_icon {
  width: 80px;
  height: 80px;
}

.self_content {
  background: #f0f0f0;
  margin-bottom: 2px;
}

.self_content button {
  background-color: transparent;
  /* background-color: red; */
  position: fixed;
  opacity: 0;
  padding: 35rpx 20rpx;
}

.self_address {
  display: flex;
  justify-content: space-between;
  padding: 35rpx 20rpx;
}

.share_style {
  display: flex;
  align-items: center;
}
