/* pages/self_pages/address/address.wxss */

.adress_body {
  display: flex;
  padding: 100rpx 0;
  justify-content: center;
}

.address_list {
  width: 100%;
}

.address_content {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
}

.chose_style {
  background: #ccc;
}

.address_content view:first-child {
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
}

.address_content view:first-child text:first-child {
  width: 115rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address_content view:last-child {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address_btn {
  position: fixed;
  bottom: 0;
  width: 90%;
  text-align: center;
}

.add_address_1, .add_address_2 {
  background: red;
  padding: 20rpx 0;
  border-radius: 10px;
  margin-bottom: 50rpx;
  color: white;
}

.modal_content {
  display: flex;
  align-items: center;
  border-bottom: 1px solid red;
}

.modal_content input {
  width: 85%;
  padding: 30rpx 0;
}

.modal_content:last-child checkbox-group {
  padding: 30rpx 0;
}

picker {
  width: 100%;
  padding: 30rpx 0;
  border-bottom: 1px solid red;
}
